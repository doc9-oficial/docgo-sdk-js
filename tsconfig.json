{
        "compilerOptions": {
            "target": "ES2020",
            "module": "commonjs",
            "moduleResolution": "node",
            "lib": ["ES2020", "DOM"],
            "declaration": true,
            "declarationMap": true,
            "strict": true,
            "esModuleInterop": true,
            "skipLibCheck": true,
            "forceConsistentCasingInFileNames": true,
            "types": ["node"],
            "outDir": "./dist",
            "rootDir": "."
        },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules"]
}